<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.City.CityFragment">

    <EditText
        android:id="@+id/name_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Название Города"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/city_btn_search_oval"
        android:layout_marginHorizontal="140dp"
        android:hint="Поиск"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>